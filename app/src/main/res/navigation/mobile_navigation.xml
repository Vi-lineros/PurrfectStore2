<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/productFragment"
    tools:layout="@layout/fragment_product" >
    <fragment
            android:id="@+id/modifyListFragment"
        android:name="com.mycat.purrfectstore2.ui.fragments.ModifyListFragment"
        android:label="Lista de productos"
        tools:layout="@layout/fragment_modify_list" >
        <action
            android:id="@+id/action_modifyListFragment_to_modifyProductFragment"
            app:destination="@id/modifyProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.mycat.purrfectstore2.ui.fragments.ProfileFragment"
        android:label="fragment_nav__profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/productFragment"
        android:name="com.mycat.purrfectstore2.ui.fragments.ProductFragment"
        android:label="Productos"
        tools:layout="@layout/fragment_product" >
        <action
            android:id="@+id/action_nav_product_to_nav_Product_Details2"
            app:destination="@id/productDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.mycat.purrfectstore2.ui.fragments.CartFragment"
        android:label="Carrito"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/action_cartFragment_to_cartOrderFragment"
            app:destination="@id/cartOrderFragment" />
    </fragment>
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.mycat.purrfectstore2.ui.fragments.AddProductFragment"
        android:label="AÃ±adir Producto"
        tools:layout="@layout/fragment_add_product" />
    <fragment
        android:id="@+id/modifyProductFragment"
        android:name="com.mycat.purrfectstore2.ui.fragments.ModifyProductFragment"
        android:label="Modificar Producto"
        tools:layout="@layout/fragment_modify_product" >
        <argument
            android:name="productId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/deleteProductFragment"
        android:name="com.mycat.purrfectstore2.ui.fragments.AddProductFragment"
        android:label="Eliminar Producto"
        tools:layout="@layout/fragment_delete_product" />
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.mycat.purrfectstore2.ui.fragments.ProductDetailFragment"
        android:label="Detalles del Producto"
        tools:layout="@layout/fragment_product_details" >
        <argument
            android:name="productId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/cartOrderFragment"
        android:name="com.mycat.purrfectstore2.ui.fragments.CartOrderFragment"
        android:label="Pedido en espera"
        tools:layout="@layout/fragment_cart_order" />
    <fragment
        android:id="@+id/usersOrderListFragment"
        android:name="com.mycat.purrfectstore2.ui.fragments.UsersOrderListFragment"
        android:label="Pedidos de usuarios"
        tools:layout="@layout/fragment_users_order_list" >
        <action
            android:id="@+id/action_usersOrderListFragment_to_userOrderFragment"
            app:destination="@id/userOrderFragment" />
    </fragment>
    <fragment
        android:id="@+id/userOrderFragment"
        android:name="com.mycat.purrfectstore2.ui.fragments.UserOrderFragment"
        android:label="Pedido del usuario"
        tools:layout="@layout/fragment_user_order" />
</navigation>